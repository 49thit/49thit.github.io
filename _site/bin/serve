#!/usr/bin/env bash
set -euo pipefail
ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$ROOT"

if [ -x "$ROOT/bin/setup" ]; then
  "$ROOT/bin/setup"
fi

if command -v bundle >/dev/null 2>&1; then
  exec bundle exec jekyll serve --livereload
else
  echo "Bundler is not installed. Install Ruby + bundler to run the site." >&2
  exit 1
fi
